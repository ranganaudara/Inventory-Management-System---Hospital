<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dashboard.DashboardController">
   <children>
      <Label alignment="CENTER" prefHeight="66.0" prefWidth="1024.0" text="Equipment Inventory Management System" textAlignment="CENTER">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <TabPane layoutY="66.0" prefHeight="700.0" prefWidth="1024.0" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab fx:id="tab1" text="Equipments">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutX="317.0" prefHeight="668.0" prefWidth="707.0">
                           <children>
                              <TableView fx:id="eq_table" prefHeight="668.0" prefWidth="702.0">
                                 <columns>
                                    <TableColumn fx:id="clm_id" prefWidth="37.0" text="ID" />
                                    <TableColumn fx:id="clm_name" minWidth="0.0" prefWidth="198.0" text="Name" />
                                    <TableColumn fx:id="clm_model" prefWidth="106.0" text="Model no" />
                                    <TableColumn fx:id="clm_company" prefWidth="189.0" text="Company" />
                                    <TableColumn fx:id="clm_usable" minWidth="0.0" prefWidth="82.0" text="Usable" />
                                    <TableColumn fx:id="clm_un_usable" minWidth="0.0" prefWidth="89.0" text="Un-usable" />
                                 </columns>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </TableView>
                           </children>
                        </HBox>
                        <VBox prefHeight="668.0" prefWidth="318.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0" prefWidth="367.0" text="Add New Equipment" textAlignment="CENTER">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="10.0" top="10.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="eq_name" promptText="Name">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="eq_model" layoutX="10.0" layoutY="51.0" promptText="Model No">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="eq_company" layoutX="10.0" layoutY="51.0" promptText="Company">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                              <Button mnemonicParsing="false" onAction="#addEquipment" prefHeight="26.0" prefWidth="372.0" text="Add Equipment">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </Button>
                              <Button layoutX="20.0" layoutY="169.0" mnemonicParsing="false" onAction="#clearEqFields" prefHeight="26.0" prefWidth="372.0" text="Clear Form">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </Button>
                              <Button layoutX="20.0" layoutY="205.0" mnemonicParsing="false" onAction="#loadEquipmentData" prefHeight="26.0" prefWidth="372.0" text="Delete Equipment">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab fx:id="tab2" text="Units &amp;Wards">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutX="317.0" prefHeight="668.0" prefWidth="600.0">
                           <children>
                              <TableView fx:id="unit_table" prefHeight="668.0" prefWidth="610.0">
                                 <columns>
                                    <TableColumn fx:id="u_clm_id" prefWidth="81.0" text="ID" />
                                    <TableColumn fx:id="u_clm_name" minWidth="0.0" prefWidth="215.0" text="Name" />
                                 </columns>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </TableView>
                           </children>
                        </HBox>
                        <VBox prefHeight="668.0" prefWidth="318.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0" prefWidth="367.0" text="Add New Unit/Ward" textAlignment="CENTER">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="10.0" top="10.0" />
                                 </padding>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="unit_name" promptText="Name">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                              <Button mnemonicParsing="false" onAction="#addUnit" prefHeight="26.0" prefWidth="372.0" text="Add Unit/Ward">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </Button>
                              <Button layoutX="20.0" layoutY="169.0" mnemonicParsing="false" onAction="#clearUnitFields" prefHeight="26.0" prefWidth="372.0" text="Clear Form">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </Button>
                              <Button layoutX="20.0" layoutY="205.0" mnemonicParsing="false" onAction="#loadUnitData" prefHeight="26.0" prefWidth="372.0" text="Delete Unit/Ward">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</AnchorPane>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="equipment_details.EquipmentDetailsController">
   <children>
      <Label alignment="CENTER" prefHeight="66.0" prefWidth="1024.0" text="Equipment Inventory Management System" textAlignment="CENTER">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <HBox layoutY="66.0" prefHeight="702.0" prefWidth="1024.0" style="-fx-background-color: lightgrey;">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="702.0" prefWidth="318.0" spacing="10.0">
               <children>
                  <Label fx:id="eq_name" alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0" prefWidth="367.0" text="EquipName" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="17.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <ImageView fx:id="eq_img" fitHeight="211.0" fitWidth="318.0" pickOnBounds="true" preserveRatio="true">
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="318.0" text="Add Location" />
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="318.0" text="Delete" />
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="318.0" text="Save" />
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="318.0" text="Send to Un-usable" />
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="318.0" text="Go Back" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
            <TableView fx:id="location_table" prefHeight="702.0" prefWidth="688.0">
              <columns>
                  <TableColumn fx:id="clm_location" prefWidth="315.0" text="Location (Unit/Ward)" />
                <TableColumn fx:id="clm_number" maxWidth="477.0" minWidth="0.0" prefWidth="328.0" text="Number of Items" />
              </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>
